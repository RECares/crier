<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
  <%= form.error_notification %>

  <div class="row">
    <div class="col-6 offset-3">
      <center><h1>Sign up</h1></center>

      <div class="form-inputs">
        <%= form.input :first_name, autofocus: true %>
        <%= form.input :last_name %>
        <%= form.input :email, input_html: { autocomplete: "email" } %>
        <%= form.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" } %>
        <%= form.input :password_confirmation, label: "Confirm password", input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions">
        <%= form.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
<% end %>
