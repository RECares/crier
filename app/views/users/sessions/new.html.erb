<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <center><h1>Sign in</h1></center>

      <div class="form-inputs">
        <%= form.input :email, autofocus: true, input_html: { autocomplete: "email" } %>
        <%= form.input :password, input_html: { autocomplete: "current-password" } %>
        <%= form.input :remember_me, as: :boolean, input_html: { checked: true } if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= form.button :submit, "Sign in", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
