<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |form| %>
  <%= form.error_notification %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <center><h1>Forgot your password?</h1></center>

      <div class="form-inputs">
        <%= form.input :email, autofocus: true, input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions">
        <%= form.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
