<%= simple_form_for incident do |form| %>
  <div class="form-inputs">
    <%= form.input :name, autofocus: true, required: false %>
      <div class="row">
        <div class="col-10" style="padding-right:0px;">
          <%= form.input :location, required: false, hint: "Enter an address or use current location to autofill", input_html: { id: "location" } %>
        </div>
        <div class="col-2">
          <button type="button" class="btn btn-primary btn-block" title="Use current location" id="use-current-location-button" style="margin-top:31px;">
            <svg class="bi bi-cursor-fill" width="1em" height="1em" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M16.081 4.182a.5.5 0 01.104.557l-5.657 12.727a.5.5 0 01-.917-.006L7.57 12.694l-4.766-2.042a.5.5 0 01-.006-.917L15.525 4.08a.5.5 0 01.556.103z" clip-rule="evenodd"></path>
            </svg>
          </button>
        </div>
      </div>
    <div class="row">
      <div class="col-6">
        <%= form.input :latitude, as: :string, readonly: true, required: false, input_html: { id: "latitude" } %>
      </div>
      <div class="col-6">
        <%= form.input :longitude, as: :string, readonly: true, required: false, input_html: { id: "longitude" } %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= form.button :submit, class: "btn btn-primary btn-block" %>
  </div>
<% end %>
